<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/selector_item_movie"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/movie_row_poster"
            android:layout_width="@dimen/movie_row_poster_width"
            android:layout_height="@dimen/movie_row_poster_height" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/lv_row_padding">

            <TextView
                android:id="@+id/movie_row_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:textColor="@android:color/primary_text_light"
                android:singleLine="true"
                android:textSize="@dimen/lv_row_title_size" />

            <TextView
                android:id="@+id/movie_row_release_date"
                android:textColor="@android:color/secondary_text_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:paddingTop="@dimen/lv_row_padding"
                android:singleLine="true"
                android:textSize="@dimen/lv_row_subtitle_size" />

            <TextView
                android:id="@+id/movie_row_rating"
                android:textColor="@android:color/secondary_text_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:paddingTop="@dimen/lv_row_padding"
                android:singleLine="true"
                android:textSize="@dimen/lv_row_subtitle_size" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

